<assembly>
  <id>actuator-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>${artifactId}-${project.version}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory></outputDirectory>
      <!-- include dependencies listed by `mvn dependency:list|grep ":compile"|sort -u` in community/actuator -->
      <includes>
        <include>spring-boot-actuator-*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
